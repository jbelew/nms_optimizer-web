{
	"name": "nms_optimizer",
	"private": true,
	"version": "4.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build --mode production",
		"build:docker": "DOCKER=true vite build --mode docker",
		"build:critical": "tsc -b && vite build --mode critical",
		"build:e2e": "vite build --mode e2e",
		"build:images": "node scripts/process-images.mjs",
		"lint:fix": "eslint . --fix",
		"lint": "eslint .",
		"sitemap": "node scripts/generate-sitemap.mjs",
		"preview": "vite preview",
		"screenshot": "node scripts/screenshot.cjs",
		"test": "vitest run --coverage",
		"test:e2e": "npm run build:e2e && playwright test",
		"test:ci": "vitest run",
		"typecheck": "tsc --noEmit",
		"format:check": "prettier --check ./src",
		"format": "prettier --write ./src",
		"coverage:merge": "vitest coverage merge",
		"coverage:report": "vitest coverage report --reporter=lcov --reporter=text",
		"start": "node server.js",
		"heroku-postbuild": "vite build",
		"preversion": "",
		"version": "npm run changelog && git add CHANGELOG.md",
		"postversion": "git push origin main --follow-tags",
		"changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
		"prepare": "husky"
	},
	"dependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@ianvs/prettier-plugin-sort-imports": "^4.7.0",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-icons": "^1.3.2",
		"@radix-ui/themes": "^3.2.1",
		"@storybook/addon-a11y": "^9.1.8",
		"@storybook/addon-docs": "^9.1.8",
		"@storybook/react-vite": "^9.1.8",
		"@vitest/coverage-v8": "^3.2.4",
		"commitizen": "^4.3.1",
		"eslint-plugin-storybook": "^9.1.8",
		"etag": "^1.8.1",
		"express": "^5.1.0",
		"express-static-gzip": "^3.0.0",
		"i18next": "^25.2.1",
		"i18next-browser-languagedetector": "^8.2.0",
		"i18next-http-backend": "^3.0.2",
		"immer": "^10.1.1",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"radix-ui": "^1.4.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-ga4": "^2.1.0",
		"react-i18next": "^15.5.3",
		"react-markdown": "^10.1.0",
		"react-router-dom": "^7.6.3",
		"recharts": "^3.1.2",
		"socket.io-client": "^4.8.1",
		"web-vitals": "^5.0.3",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.29.0",
		"@fullhuman/postcss-purgecss": "^7.0.2",
		"@playwright/test": "^1.54.1",
		"@tailwindcss/postcss": "^4.1.8",
		"@tailwindcss/vite": "^4.1.10",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^24.0.15",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.6",
		"@typescript-eslint/eslint-plugin": "^8.41.0",
		"@typescript-eslint/parser": "^8.41.0",
		"@vitejs/plugin-react": "^4.5.1",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.21",
		"babel-plugin-react-compiler": "^19.1.0-rc.3",
		"conventional-changelog-cli": "^5.0.0",
		"cz-conventional-changelog": "^3.0.1",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-prettier": "^5.4.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.2.0",
		"happy-dom": "^18.0.1",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lighthouse": "^12.7.0",
		"lightningcss": "^1.30.1",
		"postcss": "^8.5.5",
		"prettier": "^3.5.3",
		"puppeteer-core": "^24.17.0",
		"require": "^2.4.20",
		"rollup-plugin-critical": "^1.0.15",
		"rollup-plugin-visualizer": "^6.0.3",
		"sharp": "^0.34.3",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^7.1.7",
		"vite-plugin-color-scheme": "^0.0.1",
		"vite-plugin-compression": "^0.5.1",
		"vite-plugin-splash-screen": "^0.2.0",
		"vitest": "^3.2.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
